/**index.wxss**/
.speak-style{ 
    position: relative; 
    height: 240rpx; 
    width: 240rpx; 
    border-radius: 20rpx; 
    margin: 0 auto; 
    background: #26A5FF; 
    z-index:9999;
}
.sound-style{ 
  position: absolute; 
  width: 74rpx; 
  height:150rpx; 
  margin-top: 45rpx; 
  margin-left: 83rpx; 
} 

.container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.record-view {
  text-align: center;
  height: 500rpx;
  background-color: #fff;
}
.record-status{
  opacity: 0;
  padding-top: 20rpx;
  height: 80rpx;
}
.record-status image{
  height: 20rpx;
  width: 20rpx;
}
.record-status text{
  color: red;
  margin-left: 10rpx;
  font-size: 30rpx;
  font-family: "Microsoft YaHei";
}
.record-status .dot{
  font-weight: 600;
}
.record-timer{
  height: 200rpx;
  line-height: 200rpx;
  /*background-image: url(/images/wave.png);*/
  background-repeat: no-repeat;
  background-position: center;
}
.record-timer .duration{
  font-size: 100rpx;
  font-family: "Arial";
}
.record-content{
  height: 100rpx;
}
.content-wripper{
   position:relative;
  margin:50rpx 0 50rpx 80rpx;
  display:inline-block;
  height:70rpx;
  line-height:70rpx;
  width:50%;
  border:1px solid #7ecef4;
  border-radius:10rpx;

}
.content-wripper text{
  font-size:25rpx;
  padding-left:8rpx;
}
.content-wripper image{
display:block;
position:absolute;
right:20rpx;
top:6rpx;
bottom:20rpx;
height:60rpx;
width:60rpx;


}

.record-form {
  margin-top: 20rpx;
}
.record-switch{
  /* height: 400rpx;
  background-color: #fff; */
  height:400rpx;
background-color:#fff;
position:fixed;
bottom:-65rpx;
left:33%;

}
.tip{
  text-align: center;
}
.tip text{
  color: #888;
  padding-top: 20rpx;
  font-size: 30rpx;
}
.tip button{
  margin-left:100rpx;
}

.big-btn{
  /* padding-top: 35rpx;
  text-align: center; */
}
.big-btn image{
  height: 250rpx;
  width: 250rpx;
  border-radius: 50%;
  border: 1px solid #7ecef4;
}

.record-post{
  margin: 20rpx auto;
  height: 100rpx;
  background-color: #fff;
}
.record-tag{
  height: 100%;
  padding: 0 30rpx;
  font-size: 32rpx;
}

.info{
  margin-top:70rpx;
  margin-left:10rpx;


}

.info text{
  white-space:nowrap;
}